native $;
native Math;
native setTimeout;

ra=$("#runArea");
//ra.empty();
x=3;
y=5;
inp=$("<input>").val("test").css{position:"absolute"};
$("<div>").text(x+y).appendTo(ra).append(inp);
cv=$("<canvas>").attr{width:300, height:300}.appendTo(ra);
c=cv[0].getContext("2d");

for (var i=0; i<100; i++) {
    inp.css{left:i,top:i};
    wait(10);
}
//四角形を描く
c.fillRect(30,30,50,50);
//塗りつぶし色を指定する
c.fillStyle="green";
c.fillRect(30,30,100,50);
wait(10);


//線の色を指定する
c.strokeStyle="blue";
c.lineWidth=2;
c.strokeRect(30,30,100,50);
wait(1000);
//線を描く
for(i=0 ;i<200 ; i+=10) {
    c.beginPath();
    c.moveTo(100,100);
    c.lineTo(150,200+i);
    c.stroke();
    wait(10);
}


//多角形を描く
c.beginPath();
c.moveTo(200,200);
c.lineTo(250,250);
c.lineTo(200,250);
c.closePath();
c.fill();
c.stroke();
wait(1000);

//円を描く
c.beginPath();
c.arc(200,100,50,0,Math.PI*2);
c.fill();
c.stroke();
wait(1000);

//文字を描く
c.font="50px monospace";
c.fillText("Hello",50,50);
c.strokeText("Hello",50,50);


\wait(time) {
    time=time||100;
    var t=_thread;
    t.suspend();
    setTimeout(\(){
        t.steps();
    },time);
}