// Javascript
// 左右移動
// 学習項目
// 猫だけでなくボールを動かす <- 今ここ
// if文
// random

//猫のxとy
x=100;
y=300;
//ボールのxとy
bx=100;
by=0;
onClick("right",right);
onClick("left",left);
while(true) {
    // 猫をうごかす
    move("neko",x,y);
    // ボールを動かす
    move("ball",bx,by);
    by+=10;
    wait(50);
}

function left() {
    x-=10;
}
function right() {
    x+=10;
}
